<div class="add-note-wrapper">
  <nav class="breadcrumb-nav">
    <ul class="breadcrumb-list">
      <li><a href="/dashboard">Painel</a></li>
      <li>Publicar Vaga</li>
    </ul>
  </nav>

  <div class="note-header">
    <h1>Publicar Nova Vaga</h1>
  </div>

  <form action="/dashboard/add-job" method="POST" class="job-form">

    <div class="form-group">
      <label for="jobTitle">Título da Vaga</label>
      <input type="text" id="jobTitle" name="jobTitle" class="form-input" required placeholder="Ex: Analista Fiscal Júnior">
    </div>

    <div class="form-group">
      <label for="location">Local de trabalho</label>
      <input type="text" id="location" name="location" class="form-input" required placeholder="Ex: Vila Velha – ES">
    </div>

    <div class="form-group">
      <label for="companyName">Nome da Empresa (opcional)</label>
      <input type="text" id="companyName" name="companyName" class="form-input" placeholder="Ex: Confidencial">
    </div>

    <!-- CORRIGIDO -->
    <div class="form-group">
      <label for="contractType">Tipo de Contrato</label>
      <select id="contractType" name="contractType" class="form-input" required>
        <option value="">Selecione uma opção</option>
        <option value="CLT">CLT</option>
        <option value="PJ">PJ</option>
        <option value="Estágio">Estágio</option>
        <option value="Temporário">Temporário</option>
        <option value="Freelancer">Freelancer</option>
        <option value="Outros">Outros</option>
      </select>
    </div>

    <!-- CORRIGIDO -->
    <div class="form-group">
      <label for="workSchedule">Jornada de Trabalho</label>
      <select id="workSchedule" name="workSchedule" class="form-input" required>
        <option value="">Selecione uma opção</option>
        <option value="Integral">Integral</option>
        <option value="Meio período">Meio período</option>
        <option value="Escala">Escala (especifique abaixo)</option>
        <option value="Híbrido">Híbrido</option>
        <option value="Remoto">Remoto</option>
        <option value="Outros">Outros</option>
      </select>
      <input type="text" name="workScheduleDetails" class="form-input" placeholder="Detalhes da escala ou outros formatos">
    </div>

    <div class="form-group">
      <label for="mission">Missão / Objetivo do Cargo</label>
      <textarea id="mission" name="mission" class="form-input" rows="2"></textarea>
    </div>

    <div class="form-group">
      <label for="responsibilities">Principais Atribuições / Responsabilidades</label>
      <textarea id="responsibilities" name="responsibilities" class="form-input" rows="4" required></textarea>
    </div>

    <div class="form-group">
      <label>Requisitos Obrigatórios</label>
      <input type="text" name="education" class="form-input" placeholder="Formação">
      <input type="text" name="experience" class="form-input" placeholder="Experiência mínima">
      <input type="text" name="technicalSkills" class="form-input" placeholder="Conhecimentos técnicos">
    </div>

    <div class="form-group">
      <label for="desiredSkills">Requisitos Desejáveis</label>
      <textarea id="desiredSkills" name="desiredSkills" class="form-input" rows="2"></textarea>
    </div>

    <div class="form-group">
      <label for="differentials">Diferenciais</label>
      <textarea id="differentials" name="differentials" class="form-input" rows="2" placeholder="Ex: idiomas, certificações, conhecimento em startups..."></textarea>
    </div>

    <div class="form-group">
      <label for="salaryRange">Faixa Salarial</label>
      <input type="text" id="salaryRange" name="salaryRange" class="form-input" placeholder="Ex: R$2.000 a R$2.500">
    </div>

    <div class="form-group">
      <label for="benefitsText">Benefícios Oferecidos</label>
      <textarea id="benefitsText" name="benefitsText" class="form-input" rows="4"
        placeholder="Liste aqui todos os benefícios da vaga, como: Vale alimentação/refeição (valor), Vale transporte, Plano de saúde, Plano odontológico, Bonificações, Licença estendida, etc."></textarea>
    </div>

    <div class="form-group">
      <label for="applicationEmail">E-mail para candidatura</label>
      <input type="email" id="applicationEmail" name="applicationEmail" class="form-input" placeholder="Ex: recrutamento@empresa.com">
    </div>

    <div class="form-group">
      <label for="applicationLink">Link ou QR Code</label>
      <input type="url" id="applicationLink" name="applicationLink" class="form-input">
    </div>

    <div class="form-group">
      <label for="applicationSite">Site de candidatura</label>
      <input type="url" id="applicationSite" name="applicationSite" class="form-input">
    </div>

    <div class="form-group">
      <label for="submissionInstructions">Instruções para envio</label>
      <textarea id="submissionInstructions" name="submissionInstructions" class="form-input" rows="2" placeholder="Ex: Assunto do e-mail “Vaga – Cidade – Nome”"></textarea>
    </div>

    <div class="form-group">
      <label for="deadline">Prazo para envio</label>
      <input type="text" id="deadline" name="deadline" class="form-input" placeholder="Ex: Até 31/07/2025">
    </div>

    <div class="form-group">
      <label for="institutionalMessage">Mensagem Institucional</label>
      <textarea id="institutionalMessage" name="institutionalMessage" class="form-input" rows="2" placeholder="Ex: Venha crescer com a gente!"></textarea>
    </div>

    <button type="submit" class="btn-primary-form">Publicar Vaga</button>
  </form>
</div>
